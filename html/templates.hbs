<script type='text/x-handlebars-template' id='interactive_download_structure'>
    <div class='row'>
        <div class='col-lg-12'>
            <p>
                {{{interactive_download_welcome_text}}}
            </p>
        </div>
    </div>
    <div id='interactive_download_selectors'></div>
    <div class='row'>
        <div class='col-lg-8'>
            <span id='preview_options_placeholder'></span>
        </div>

        <div class='col-lg-4'>
            <span id='download_options_placeholder' class='pull-right'></span>
            <button class='btn btn-primary pull-right' id='preview_button'>
                <i class='fa fa-search'></i>{{preview_label}}
            </button>
        </div>
    </div>

</script>

<!-- Template for domains list. -->
<script type='text/x-handlebars-template' id='domains_list_structure'>
    <h5>{{section_description}}</h5>
    <br>
    {{#each domains}}
        <div class='row'>
            <div class='col-lg-12'>
                <a href='{{this.link}}'>
                    <i class='fa fa-link'></i> {{this.label}}
                </a>
            </div>
        </div>
        <br>
    {{/each}}
</script>