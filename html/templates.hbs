                    </div>
                </div>

                <!-- Report -->
                <div role='tabpanel' class='tab-pane' id='report'>
                    <div id='report_container'></div>
                </div>

            </div>

            <div id='download-wrapper' class='fx-olap-holder'>
                <div class='row'>
                    <div class='col-lg-12'>
                        <div id='downloadOutputArea' class='fx-olap-holder'>
                            <!--<p>-->
                                <!--Preview will be shown here.-->
                            <!--</p>-->
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
